{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["types/**/*.ts", "src/**/*.ts", "src/**/*.vue"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",

    "strict": true,
    "jsx": "preserve",
    "jsxImportSource": "vue",

    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "#/*": ["./types/*"]
    }
  }
}
